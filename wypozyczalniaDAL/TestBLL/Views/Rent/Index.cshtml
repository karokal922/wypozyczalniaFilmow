@using wypozyczalniaDAL.Models;
<h1>RENTCONTROLLER</h1>
@model IEnumerable<wypozyczalniaDAL.Models.Rent>

@{
    ViewData["Title"] = "Index";
}
@if (ViewBag.AllUsers!=null)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Surname
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.AllUsers)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Surname
                    </td>
                    <td>
                        <a asp-action="GetRentalsByUser" asp-route-id="@item.Id_User">Get Rental</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@if (ViewBag.AllMovies!=null)
{
<table class="table">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Director
            </th>
            <th>
                Premiere
            </th>
            <th>
                Description
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
            @foreach (var item in ViewBag.AllMovies)
        {
            <tr>
                <td>
                    @item.Title
                </td>
                <td>
                    @item.Director
                </td>
                <td>
                    @item.Premiere
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                        <a asp-action="GetRentalsByMovie" asp-route-id="@item.Id_Movie">Get Rentals</a>
                </td>
            </tr>
        }
    </tbody>
</table>
}