@using MovieRental.DAL.Models;
@model IEnumerable<MovieRental.DAL.Models.Rent>

@if (ViewBag.RentalsByMovie != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Id_Rent)</th>
                <th>@Html.DisplayNameFor(model => model.Payment.Price)</th>
                <th>@Html.DisplayNameFor(model => model.User.Name)</th>
                <th>@Html.DisplayNameFor(model => model.RentingDate)</th>
                <th>@Html.DisplayNameFor(model => model.Movies)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Rent item in ViewBag.RentalsByMovie)
            {
                <tr>
                    <td>@item.Id_Rent</td>
                    <td>@item.Payment.Price</td>
                    <td>@item.User.Name</td>
                    <td>@item.RentingDate</td>
                    <td>@item.Movies.Count()</td>
                </tr>
            }
        </tbody>
    </table>
}
<div>
    <a asp-action="Index">Back to List</a>
</div>