@using MovieRental.DAL.Models;
<h1>MOVIE BASE</h1>



@model IEnumerable<MovieRental.DAL.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<form asp-action="ShowMovies" asp-controller="Movie" method="get">
    Year of Production:<input type="text" name="year" />
    <input type="submit" value="Send" />
</form>
<br />

@if (ViewBag.Movies != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Director</th>
                <th>Premiere</th>
                <th>Description</th>
                <th>Average Rating</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (Movie item in ViewBag.Movies)
            {
                if(item == null)
                {
                    
                }
                else
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.Director</td>
                        <td>@item.Premiere</td>
                        <td>@item.Description</td>
                        @{
                            if (item.Rates.Count() > 0)
                            {
                                <td>@(Math.Round(item.Rates.Average(r => r.RateValue), 1))</td>                        
                            }
                            else
                            {
                                <td>0.0</td>
                            }
                        }
                    </tr>
                }
            }
        </tbody>
    </table>
}

@if (ViewBag.AllCategories != null @*&& ViewBag.AllCategories.Any()*@)
{

    <table class="table">
        <thead>
            <tr>
                <th>Show all movies from this category</th>
            </tr>
        </thead>
    </table>
        
            <div class="category-container">
            <a asp-action="GetAllMoviesWithGivenCategory" asp-route-id="-1" class="category-link">
            All
            </a>
                @foreach (var category in ViewBag.AllCategories)
                {
                    <a asp-action="GetAllMoviesWithGivenCategory" asp-route-id="@category.Id_Category" class="category-link">
                        @category.CategoryName
                    </a>
                }
            </div>
    
  
}
else
{
    <p>No categories found.</p>
}
