@model MovieRental.DAL.Models.Payment

@{
    ViewData["Title"] = "Create";
}
@if (!string.IsNullOrEmpty(ViewData["CreatingError"] as string))
{
    <script>
        alert('@Html.Raw(ViewData["CreatingError"])');
    </script>
}
<h1>Create</h1>

<h4>Payment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RentId" class="control-label"></label>
                <select asp-for="RentId" class="form-control" asp-items="ViewBag.RentId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

