@model IEnumerable<MovieRental.DAL.Models.Payment>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-color: black;
            color: white;
        }

        .top-bar {
            background-color: darkgray;
            padding: 10px;
        }

            .top-bar a {
                color: white;
                text-decoration: none;
                margin-right: 20px;
            }

        table {
            color: white !important; /* Use !important to override other styles */
        }

        .create-button {
            background-color: gray;
            display: inline-block;
            padding: 10px 20px;
            border-radius: 5px;
        }

            .create-button a {
                color: white;
                text-decoration: none;
            }

    </style>
</head>
<body>
    <div class="top-bar">
        <a href="/categories">Categories</a>
        <a href="/movies">Movies</a> <!-- Updated to "Movies" -->
        <a href="/rates">Rates</a>
        <a href="/rents">Rents</a>
        <a href="/users">Users</a>
    </div>

    <h1>Index</h1>

    <div class="create-button">
        <a asp-action="Create">Create</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Rent)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rent.Id_Rent)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id_Payment">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id_Payment">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id_Payment">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
