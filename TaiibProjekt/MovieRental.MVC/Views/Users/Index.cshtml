@model IEnumerable<MovieRental.DAL.Models.User>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-color: black;
            color: white;
        }

        .top-bar {
            background-color: darkgray;
            padding: 10px;
        }

            .top-bar a {
                color: white;
                text-decoration: none;
                margin-right: 20px;
            }

        table {
            color: white !important;
        }

        .create-button {
            background-color: gray;
            display: inline-block;
            padding: 10px 20px;
            border-radius: 5px;
        }

            .create-button a {
                color: white;
                text-decoration: none;
            }
    </style>
</head>
<body>
    <div class="top-bar">
        <a href="/movies">Movies</a>
        <a href="/categories">Categories</a>
        <a href="/payments">Payments</a>
        <a href="/rates">Rates</a>
        <a href="/rents">Rents</a>
    </div>

    <h1>Index</h1>

    <div class="create-button">
    <a asp-action="Create">Create</a>
</div>
    <table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id_User">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id_User">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id_User">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>