@model MovieRental.MVC.Controllers.RentEditViewModel

@{
    ViewData["Title"] = "Edit";
}
@if (!string.IsNullOrEmpty(ViewData["NotificationMessage"] as string))
{
    <script>
        alert('@Html.Raw(ViewData["NotificationMessage"])');
    </script>
}
<h1>Edit</h1>

<h4>Rent</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<input type="hidden" asp-for="Id_Rent" />*@
            <div class="form-group">
                <label asp-for="RentingDate" class="control-label"></label>
                <input asp-for="RentingDate" class="form-control" />
                <span asp-validation-for="RentingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedMovieIds" class="control-label"></label>
                <select asp-for="SelectedMovieIds" class="form-control" asp-items="ViewBag.MoviesIds" multiple></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

